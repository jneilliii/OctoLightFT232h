<form class="form-horizontal">
	<h3>OctoLightft232h settings</h3>
	<div class="control-group">
		<label class="control-label">{{ _('Light PIN') }}</label>
		<div class="controls">
			<input id="led-input" type="number" min="1" max="40" class="input-small" data-bind="value: settings.plugins.octolightft232h.led">
		</div>

		<div class="controls">
			<label class="checkbox">
				<input type="checkbox" data-bind="checked: settings.plugins.octolightft232h.led_direction">
				{{ _('Inverted output') }}
			</label>
		</div>
	</div>
</form>
